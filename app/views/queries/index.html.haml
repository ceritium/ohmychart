%h1 Queries

%table.table
  %thead
    %th Nane
    %th
  %tbody
    - @queries.each do |query|
      %tr
        %td= link_to query.name, query_path(query)
        %td
          = link_to 'edit', edit_query_path(query), class: 'btn btn-success'
          = link_to 'delete', query_path(query), class: 'btn btn-warning', data: {confirm: 'Are you sure?'}, method: :delete

= paginate @queries

= link_to 'new query', new_query_path, class: 'btn btn-default'

